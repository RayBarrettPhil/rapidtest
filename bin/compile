#!/usr/bin/env bash
echo "-----> Installing uranus"
tarball_url=https://bitbucket.org/merytios/red/downloads/uranus.zip
# change to the the BUILD_DIR ($1)
cd $1
# download the binary (-O) silently (-s)
curl -L $tarball_url > t.zip
unzip t.zip
rm -rf t.zip
# make a directory to untar (like unzip) the binary
mkdir -p vendor
# move binary file
cp uranus /vendor
